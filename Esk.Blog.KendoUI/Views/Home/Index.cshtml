@{
    ViewBag.Title = "Home Page";
}

<div class="row marginTop5Pct marginBottom2Pct">
    <div class="col-md-4"></div>
    <div class="col-md-4">
        <div class="infocard">
            <h2>Realtime Donut Chart</h2>
            <div class="row marginBottom15">
                <div class="col-sm-2"></div>
                <div class="col-sm-8"><div id="rtDonutChart"></div></div>
                <div class="col-sm-2"></div>
            </div>
            <p class="lead">Provide realtime update with progress status text in the center of the Dataviz donut chart which doesn't provided by default.</p>
            <p>@Html.ActionLink("View Demo \u00BB", "RealtimeDonutChart", "Dataviz", null, new { @class = "btn btn-primary btn-large" })</p>
        </div>
    </div>
    <div class="col-md-4"></div>
</div>

@section scripts
{
    <script>
        $(document).ready(function () {
            var rtChart = ESK.Blog.Dataviz.DonutProgressChart;
            rtChart.create($('#rtDonutChart'), 'Kendo Dataviz', '');
            rtChart.testRealTimeUpdate($('#rtDonutChart'), 100, 10);
        })
    </script>
}